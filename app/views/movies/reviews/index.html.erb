<div class="panel panel-default panel-body">
	<div class="container">
		<h1>Avis</h1>
		<table class="full">
			<thead>
				<tr>
					<th>Film</th>
					<th>Note</th>
					<th>Commentaire</th>
					<th>Date</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @reviews.each do |review| %>
					<tr>
						<td><%= review.movie_id %></td>
						<td><div class="star-rating" data-score= <%= review.rating %> ></div></td>
						<td><%= review.comment %></td>
						<td><%= review.created_at %></td>
						<td><%= link_to 'View', review, class: "btn btn-default" %></td>
						<td><%= link_to 'Edit', edit_review_path(review), class: "btn btn-default" %></td>
						<td><%= link_to 'Delete', review_path(review), class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<script>
	$('.star-rating').raty({
		path: '',
		readOnly: true,
		score: function(){
			return $(this).attr('data-score');
		}
	});
</script>
